enum Availability {
  AMAZON
  THIRDPARTY
  UNAVAILABLE
}

type User {
  id: ID! @id @unique
  name: String!
  email: String! @unique
  password: String!
  domains: [Domain!]!
}

type Domain {
  id: ID! @id @unique
  hostname: String! @unique
  pages: [Page!]!
  users: [User!]!
}

type Page {
  id: ID! @id @unique
  url: String! @unique
  pageTitle: String
  wordCount: Int
  links: [Link!]!
}

type Link {
  id: ID! @id @unique
  page: Page!
  url: String!
  affiliateTagged: Boolean
  affiliateTagName: String
  product: Product
}

type Product {
  id: ID! @id @unique
  name: String
  asin: String! @unique
  links: [Link]
  availability: Availability
}
